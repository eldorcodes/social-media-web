<div id="help">
    <div class="container">
         <div style="height: 80px;"></div>
    <div class="row">
        <div class="col"></div>
        <div class="col-md-4">
            <h1 style="text-align: center;color:aliceblue">Help Center</h1>
           <div class="card" style="border-radius: 10px;padding:10px;background-color:teal">
               <div class="card-body">
                    <form action="/help" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" placeholder="Type your name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea class="form-control" name="message" placeholder="Type your message .."
                        cols="30" rows="6"required></textarea>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-danger form-control">Send</button>
                    </div>
                    </form>
               </div>
           </div>
        </div>
        <div class="col"></div>
    </div>
</div>
</div>